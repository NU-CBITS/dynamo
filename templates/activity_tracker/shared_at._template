<div class="widget-content">
	(% if (deletable) { %)
		<div>
			<button class="pull-right btn btn-mini btn-danger delete" title="Delete Share" style="margin-right:-15px;margin-top:-20px;">
				<i class="icon-remove"></i>
			</button>
		</div>
	(% } %)
	<div class="shared_activity clearfix">
		(% 
			var dateFormat = "dddd, MMMM d, yyyy",
					eventNotReviewed = (eventCompleted === null || eventCompleted === void 0 || eventCompleted === ""),
					eventWasNotCompleted = (eventCompleted === false || eventCompleted === 0 || eventCompleted === "0"),
					eventWasCompleted = !eventWasNotCompleted;
		%)
		<div class="row-fluid">
			<span class="name">(%= username %)</span>		
		</div>
		<div class="summary row-fluid">
			<p class="lead span7">
				<span class="title">(%= title %)</span>
			</p>
			<div class="label pull-right">
				<div class="text-right">
					(% if ( start > (new Date()) ) { %)
						For (%= start.toString(dateFormat) %) 
					(% } else if ( savedInState == "monitoring" || eventWasCompleted ) { %)	
						On (%= start.toString(dateFormat) %)
					(% } else if (eventNotReviewed) { %)
						Was scheduled for (%= start.toString(dateFormat) %) 
					(% } else { %)
						Had been scheduled for (%= start.toString(dateFormat) %) 
					(% } %)
				</div>
				<div class="completion-status text-right">
					(% if ( start > (new Date()) ) { %)
						(Scheduled)
					(% } else if (savedInState == "monitoring") { %)	
						(Recorded)
					(% } else if (eventWasCompleted) { %)
						(Completed)
					(% } else if (eventNotReviewed) { %)
						(Not yet reviewed)
					(% } else { %)
						(Did not complete)
					(% } %)					
				</div>			
			</div>			
		</div>

		<div class="motivation">
			(% if (motivation) { %) 
				A <strong>(%= motivation %)</strong> activity
			(% } %)
			<span class="tags">(%= _.map(tags, function(tag) { "#"+tag }).join(" ") %)</span>
		</div>

		(% if ( predicted_pleasure || predicted_accomplishment ) { %)		
			<div class="predictions row-fluid">
				<div class="row-fluid">
					<div class="span12 text-center">(%= username %) predicted</div>
				</div>
				<div class="row-fluid text-center">
					<span class="accomplishment span6">Accomplishment</span>
					<span class="pleasure span6">Pleasure</span>
				</div>				
				<div class="row-fluid text-center">
					<span class="accomplishment value span6 ">
						(% if ( predicted_accomplishment ) { print(predicted_accomplishment) } %)
					</span>
					<span class="pleasure value span6">
						(% if ( predicted_pleasure ) { print(predicted_pleasure) } %)
					</span>
				</div>
			</div>
			<hr>
		(% } %)

		(% if ( eventWasCompleted && 
						(actual_pleasure || actual_accomplishment || emotion_intensity) 
					) { %)
			<hr>

			<div class="actual row-fluid">

				<div class="row-fluid">
					<div class="span12 text-center">(%= username %) experienced</div>
				</div>

				(% if ( actual_accomplishment || actual_pleasure ) { %)		
					<div class="row-fluid text-center">
						<span class="accomplishment span6">Accomplishment</span>
						<span class="pleasure span6">Pleasure</span>
					</div>				
					<div class="row-fluid text-center">
						<span class="accomplishment value span6 ">
							(% if ( actual_accomplishment ) { print(actual_accomplishment) } %)
						</span>
						<span class="pleasure value span6">
							(% if ( actual_pleasure ) { print(actual_pleasure) } %)
						</span>
					</div>
				(% } %)

				(% if ( emotion ) { %)	
					<div class="row-fluid">
						<div class="text-center">(%= emotion %)</div>
						<div class="text-center">
							(% if (emotion_intensity) { print("("+emotion_intensity+")")} %)</li>
						</div>
					</div>
				(% } %)

			</div>

			<hr>
		(% } %)
	</div>

	<div class="row-fluid" style="margin-top:20px;">
		<div class="span4 likes"></div>
		<div class="span4 fun-votes"></div>
		<div class="span4 important-votes"></div>
	</div>

	<div class="row-fluid" style="margin-top:10px;">
		<div class="span12 comments"></div>
	</div>

</div>