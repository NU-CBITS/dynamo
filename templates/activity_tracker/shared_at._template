<div class="widget-content">
	(% if (deletable) { %)
		<button class="pull-right btn btn-mini btn-danger delete">Delete Share</button>
	(% } %)
	<div class="shared_activity">
		(% var dateFormat = "dddd, MMMM d, yyyy" %)

		<p><strong>(%= username %)</strong></p>

		(% if ( start > (new Date()) ) { %)
			<p>Has scheduled:</p>
		(% } else if (savedInState == "monitoring") { %)	
			<p>Recorded:</p>
		(% } else if (eventCompleted) { %)
			<p>Completed:</p>
		(% } else if (eventCompleted === null) { %)
			<p>Has not yet reviewed:</p>
		(% } else if (eventCompleted === false) { %)
			<p>Did not complete:</p>
		(% } %)
		
		<p style="margin-left:10px;"><em>(%= title %)</em></p>
		<p style="margin-left:10px;"><em>(%= _.map(tags, function(tag) { "#"+tag }).join(" ") %)</em></p>
		(% if (motivation) { %) 
			<p>A <strong>(%= motivation %)</strong> activity<p>
		(% } %)

		(% if ( start > (new Date()) ) { %)
			<p>For (%= start.toString(dateFormat) %)</p> 
		(% } else if ( savedInState == "monitoring" || eventCompleted ) { %)	
			<p>On (%= start.toString(dateFormat) %)</p>
		(% } else if (eventCompleted === null) { %)
			<p>Which was scheduled for (%= start.toString(dateFormat) %)</p> 
		(% } else if (eventCompleted === false) { %)
			<p>Which had been scheduled for (%= start.toString(dateFormat) %)</p> 
		(% } %)

		(% if ( start > (new Date()) ) { %)
			(% if ( predicted_pleasure || predicted_accomplishment ) { %)		
				<p>
					<strong>Predicting</strong>, <br />
					<ul>
						(% if ( predicted_pleasure ) { %)		
							<li>A pleasure of (%= predicted_pleasure %)</li>
						(% } %)
						(% if ( predicted_accomplishment ) { %)		
							<li>An accomplishment of (%= predicted_accomplishment %)</li>
						(% } %)
					<ul>
				</p>
			(% } %)
		(% } else { %)
			<div class="row-fluid">
				(% if ( predicted_pleasure || predicted_accomplishment ) { %)		
					<div class="span6">
						<p>They had <strong>predicted</strong>, <br />
							<ul>
								(% if ( predicted_pleasure ) { %)		
									<li>A pleasure of (%= predicted_pleasure %)</li>
								(% } %)
								(% if ( predicted_accomplishment ) { %)		
									<li>An accomplishment of (%= predicted_accomplishment %)</li>
								(% } %)
							</ul>
						</p>
					</div>
				(% } %)

				(% if (	eventCompleted && 
								(actual_pleasure || actual_accomplishment || emotion_intensity) 
							) { %)
					<div class="span6">
						<p>They <strong>experienced</strong>, <br />
							<ul>
								(% if ( actual_pleasure ) { %)	
									<li>A pleasure of (%= actual_pleasure %)</li>
								(% } %)
								(% if ( actual_accomplishment ) { %)	
									<li>An accomplishment of (%= actual_accomplishment %)</li>
								(% } %)
								(% if ( emotion ) { %)	
									<li>A general feeling of (%= emotion %) 
											(% if (emotion_intensity) { print("("+emotion_intensity+")")} %)</li>
								(% } %)
							</ul>					
						</p>
					</div>
				(% } %)
			</div>

		(% } %)
	</div>
	<div class="row-fluid" style="margin-top:20px;">
		<div class="span4 likes"></div>
		<div class="span4 fun-votes"></div>
		<div class="span4 important-votes"></div>
	</div>
	<div class="row-fluid" style="margin-top:10px;">
		<div class="span12 comments"></div>
	</div>
</div>